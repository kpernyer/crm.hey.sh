# Mobile Justfile (React Native)

set dotenv-load := true

default:
    @just --list

# Install dependencies
install:
    bun install

# Build (install pods if iOS exists)
build: install
    @test -d ios && cd ios && pod install 2>/dev/null || true

# Run tests
test:
    bun run test 2>/dev/null || echo "No tests configured"

# Run linting and type checks
check:
    bun run lint 2>/dev/null || true
    bun run type-check

# Run on iOS simulator
run:
    bun run ios

# Run on Android emulator
run-android:
    bun run android

# Clean build artifacts
clean:
    rm -rf node_modules/.cache ios/build android/build
